{
  "name": "playwright-circleci-reporter",
  "version": "1.0.0",
  "author": "Kamil Socha (https://github.com/ksocha)",
  "description": "Playwright test reporter for CircleCI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksocha/playwright-circleci-reporter.git"
  },
  "keywords": [
    "circleci",
    "reporter",
    "playwright",
    "parallelization",
    "testing"
  ],
  "bugs": {
    "url": "https://github.com/ksocha/playwright-circleci-reporter/issues"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch --target node",
    "build": "tsdx build --target node",
    "test": "tsdx test .*.test.ts",
    "lint": "tsdx lint",
    "prepare": "tsdx build --target node",
    "playwright": "playwright test --reporter ./dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/playwright-circleci-reporter.esm.js",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^25.2.3",
    "@types/xml": "^1.0.5",
    "husky": "^4.3.8",
    "jest-date-mock": "^1.0.8",
    "jest-xml-matcher": "^1.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "strip-ansi": "^6.0.0",
    "xmlbuilder2": "^2.1.1"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.0.0"
  }
}
